<Context>

  <Loader className="org.apache.catalina.loader.VirtualWebappLoader" virtualClasspath="{{ apps_api_conf_directory }}" />
  <Resource name="im_ws"
    auth="Container"
    type="javax.sql.DataSource"
    maxActive="8"
   	maxIdle="50"
   	maxWait="10000"
    username="{{ vault_db_user }}"
    password="{{ vault_db_password }}"
    driverClassName="org.postgresql.Driver"
    validationQuery="SELECT 1"
    removeAbandoned="true"
    removeAbandonedTimeout="60"
    testOnBorrow="true"
    url="jdbc:postgresql://localhost:5432/appsdb" />
</Context>
